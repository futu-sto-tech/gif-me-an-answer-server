{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "resolveJsonModule": true
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts",
    "src/data/*.json"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.*",
    "tests/*"
  ]
}
